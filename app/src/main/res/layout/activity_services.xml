<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#D1C4E9"
            android:elevation="4dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="#3F2B96" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Our Services"
                android:textColor="#3F2B96"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A6F8F6FF"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose the perfect photography service"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#444444"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:id="@+id/serviceWedding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#D81B60" /> <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wedding Photography"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" /> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capture your special day with beautiful moments that last forever."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp" /> </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/serviceEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="#1E88E5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Photography"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Professional coverage for corporate events, parties, and celebrations."
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/servicePortrait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="#8E24AA" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Portrait Photography"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Individual and family portraits with natural lighting settings."
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/serviceProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#2E7D32" /> <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Photography"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" /> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Showcase your products with professional images perfect for catalogs, websites, and marketing."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp" /> </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need a custom package? Contact us"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:textColor="#222222"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>